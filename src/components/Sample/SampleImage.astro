---
import { Image } from 'astro:assets';
import SampleSrcImage from '@/image/sample.png';
import ArtDirectionImage from '@/components/ArtDirectionImage/ArtDirectionImage.astro';
import SampleSrcImageSp from '@/image/sample_sp.png';
import SampleSrcImagePc from '@/image/sample_pc.png';
import HeadingH3 from '@/components/Heading/HeadingH3.astro';
import HeadingH4 from '@/components/Heading/HeadingH4.astro';
const baseUrl = import.meta.env.BASE_URL;
---

<HeadingH3 label="imgタグ" />
<ul class="list">
  <li>
    <img src=`${baseUrl}assets/image/sample.png` alt="" width="400" height="400" loading="lazy" decoding="async" />
  </li>
  <li>
    <img
      src={SampleSrcImage.src}
      alt=""
      width={SampleSrcImage.width}
      height={SampleSrcImage.height}
      loading="lazy"
      decoding="async"
    />
  </li>
</ul>

<HeadingH3 label="Imageコンポーネント" />
<ul class="list">
  <li>
    <Image src=`${baseUrl}assets/image/sample.png` alt="" width="400" height="400" loading="lazy" decoding="async" />
  </li>
  <li><Image src={SampleSrcImage} alt="" /></li>
</ul>

<HeadingH3 label="アートディレクション画像" />
<HeadingH4 label="Pictureタグ" />

<ul class="list">
  <li>
    <picture>
      <source srcset=`${baseUrl}assets/image/sample_pc.png` media="(min-width: 40em)" width="800" height="400" />
      <img src=`${baseUrl}assets/image/sample_sp.png` alt="" width="400" height="400" loading="lazy" decoding="async" />
    </picture>
  </li>
</ul>

<HeadingH4 label="独自コンポーネント（Imageコンポーネント使用）" />
<ul class="list">
  <li>
    <ArtDirectionImage imageMd={SampleSrcImagePc} imageSm={SampleSrcImageSp} />
  </li>
</ul>

<style lang="scss">
  .list {
    display: flex;
    flex-wrap: wrap;
    margin-block-start: 0.5rlh;
  }
</style>
